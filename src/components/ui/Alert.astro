---
import { cn } from "@/lib/utils";

interface Props {
  variant?: "default" | "warning" | "destructive";
  class?: string;
  title?: string;
}

const { variant = "default", class: className, title } = Astro.props;

const variantClasses = {
  default: "bg-card text-card-foreground",
  warning: "bg-card text-yellow-500 [&>svg]:text-current [&>[data-slot=alert-description]]:text-yellow/90",
  destructive: "text-destructive bg-card [&>svg]:text-current [&>[data-slot=alert-description]]:text-destructive/90"
};

const baseClasses = "not-prose relative w-full rounded-lg border px-4 py-3 text-sm grid has-[>svg]:grid-cols-[calc(var(--spacing)*4)_1fr] grid-cols-[0_1fr] has-[>svg]:gap-x-3 gap-y-0.5 items-start [&>svg]:size-4 [&>svg]:translate-y-0.5 [&>svg]:text-current";
---

<div 
  data-slot="alert" 
  role="alert" 
  class={cn(baseClasses, variantClasses[variant], className)}
>
  <slot name="icon" />
  {title && (
    <div 
      data-slot="alert-title" 
      class="col-start-2 line-clamp-1 min-h-4 font-medium tracking-tight"
    >
      {title}
    </div>
  )}
  <div 
    data-slot="alert-description" 
    class="text-muted-foreground col-start-2 grid justify-items-start gap-1 text-sm [&_p]:leading-relaxed"
  >
    <slot />
  </div>
</div>
