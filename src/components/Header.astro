---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import MobileSidebar from "./MobileSidebar.astro";
---

<header class="m-0 px-2">
  <nav class="flex items-center justify-between">
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links hidden md:block">
      <HeaderLink href="/">home</HeaderLink>
      <HeaderLink href="/posts/engineering">engineering</HeaderLink>
      <HeaderLink href="/posts/games">games</HeaderLink>
      <HeaderLink href="/posts/other">other</HeaderLink>
      <HeaderLink href="/about">about</HeaderLink>
    </div>
    <div class="mt-1 flex justify-center gap-1">
      <button id="open-sidebar" class="md:hidden p-2 hover:bg-accent rounded-md transition-colors" aria-label="Open menu">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="4" x2="20" y1="12" y2="12"></line>
          <line x1="4" x2="20" y1="6" y2="6"></line>
          <line x1="4" x2="20" y1="18" y2="18"></line>
        </svg>
      </button>
      <a href="https://github.com/patriksimms" target="_blank" class="hidden md:block">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-github-icon lucide-github"
          ><path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
        >
      </a>
      <a href="https://www.linkedin.com/in/patrik-simms/" target="_blank" class="hidden md:block">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-linkedin-icon lucide-linkedin"
          ><path
            d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
          ></path><rect width="4" height="12" x="2" y="9"></rect><circle
            cx="4"
            cy="4"
            r="2"></circle></svg
        >
      </a>
    </div>
  </nav>
</header>
<MobileSidebar />
<style>
  header {
    padding: 0 1em;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
</style>
